---
interface Props {
  linkUrl?: string;
  linkText?: string;
}

const { linkUrl, linkText } = Astro.props;
---
<section class="grid grid-cols-1 md:grid-cols-4 gap-x-12 gap-y-4">
  <div class="md:col-span-1">
    <div class="sticky top-20">
      <h2 class="text-lg font-semibold text-stone-700 dark:text-white transition-colors">
        <slot name="title" />
      </h2>
      <!-- If a linkUrl and linkText are provided, render a clickable link -->
      {linkUrl && linkText && (
        <a href={linkUrl} class="text-sm text-neutral-500 dark:text-neutral-400 hover:text-orange-400 dark:hover:text-orange-400 mt-2 block transition-colors">
          {linkText}
        </a>
      )}
    </div>
  </div>
  <div class="md:col-span-3 space-y-2">
    <slot /> <!-- Default slot for main content -->
  </div>
</section>

